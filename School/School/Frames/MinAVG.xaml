<Page x:Class="School.Frames.MinAVG"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:School.Frames"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MinAVG">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label FontSize="20" Margin="10">Введите свои оценки через запятую</Label>
            <TextBox x:Name="TBox_Marks" FontSize="20" Margin="10"></TextBox>
            <Button FontSize="20" Margin="10" Click="Button_Click">Рассчитать среднее арефметическое</Button>
        </StackPanel>
    </Grid>
</Page>
